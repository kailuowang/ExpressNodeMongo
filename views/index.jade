extends layout

block append head
  != js('blog-includes')

block append body
  #blog-app
    h1#blog-title= title
    p Welcome to #{title}
    .big
      ul#posts
      li#post-template.hidden
        a.post-title
          {{title}}
        &nbsp;
        a.post-delete-btn x

    #new-post-form.hidden
      include add-post