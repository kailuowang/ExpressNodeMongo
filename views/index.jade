extends layout

block append head
  != js('blog-includes')

block append body
  #blog-app
    h1#blog-title= title
    p Welcome to #{title}
    .big
      ul#posts
      #post-template.hidden
        li
          a.post-title
            {{title}}
          &nbsp;
          a.post-delete-btn x

    #new-post-form.hidden
      include add-post